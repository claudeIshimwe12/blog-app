{
  "hosting": {
    "public": "dist/blog-app-v2/browser",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/home/index.html"
      },
      {
        "source": "/create-blog",
        "destination": "/create-blog/index.html"
      },
      {
        "source": "/sign-in",
        "destination": "/sign-in/index.html"
      },
      {
        "source": "/register",
        "destination": "/register/index.html"
      },
      {
        "source": "/profile",
        "destination": "/profile/index.html"
      }
    ]
  }
}
